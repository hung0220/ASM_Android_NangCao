<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F8D2CF"
    android:orientation="vertical"
    android:layout_margin="2dp"

    android:layout_height="match_parent">


    <LinearLayout

        android:background="@drawable/broder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/imgMotDong"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/cf8"/>



        </LinearLayout>
        <LinearLayout

            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtTenMotDong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cà phê nguyên chất 500g"
                android:textSize="19sp"
                android:textColor="#2B2B2B"
                />
            <TextView
                android:id="@+id/txtGiaMotDong"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="99.000.000đ"
                android:textSize="17sp"
                android:textColor="#8E100B"
                />
            <TextView
                android:id="@+id/txtGhiChuMotDong"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Không có gì mô tả ở đây cả nhé....
                viết cho vui thôi.."
                android:textSize="13sp"
                android:textColor="#434141"
                />




    </LinearLayout>
</LinearLayout>
</LinearLayout>