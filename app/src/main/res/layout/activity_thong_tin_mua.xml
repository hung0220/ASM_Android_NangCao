<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context=".Login_Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10">

        <RelativeLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView

                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông Tin"
                android:textSize="26sp"/>


        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="10dp"

            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginLeft="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số Điện Thoại Người Nhận"
                />

            <EditText
                android:id="@+id/edtSDTMua"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@drawable/cuttom_input"
                android:drawableStart="@drawable/mail"
                android:drawableLeft="@drawable/mail"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Số Điện Thoại"

                android:paddingStart="11dp"
                android:paddingEnd="11dp"
                android:textSize="14sp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Người Nhận"
                />

            <EditText
                android:id="@+id/edtTenMua"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/cuttom_input"
                android:drawableStart="@drawable/name"
                android:drawableLeft="@drawable/mail"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Tên"
                android:paddingStart="11dp"
                android:paddingEnd="11dp"
                android:textSize="14sp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa Chỉ"
                />

            <EditText
                android:id="@+id/edtDiaChiMua"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/cuttom_input"
                android:drawableStart="@drawable/diachi"
                android:drawableLeft="@drawable/mail"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Địa Chỉ"
                android:paddingStart="11dp"
                android:paddingEnd="11dp"
                android:textSize="14sp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số Lượng"
                />

            <EditText
                android:id="@+id/edtSoLuongMua"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/cuttom_input"
                android:drawableStart="@drawable/pass"
                android:drawableLeft="@drawable/mail"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Số lượng"
                android:paddingStart="11dp"
                android:paddingEnd="11dp"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/boder_sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/imgMotDongMua"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/cf3"/>



                </LinearLayout>
                <LinearLayout

                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"

                    android:layout_gravity="center"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:gravity="center"
                        android:id="@+id/txtTenMotDongMua"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cà phê nguyên chất 500g"
                        android:textSize="17sp"
                        android:textColor="#2B2B2B"
                        />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/txtGiaMotDongMua"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:text="99.000.000đ"
                        android:textSize="15sp"
                        android:textColor="#8E100B"
                        />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/txtGhiChuMotDongMua"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Không có gì mô tả ở đây cả nhé viết cho vui thôi.."
                        android:textSize="12sp"
                        android:textColor="#434141"
                        />




                </LinearLayout>







        </LinearLayout>

    </LinearLayout>
        <Button
            android:id="@+id/btnMuaThat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mua"
            android:layout_marginTop="5dp"
            android:backgroundTint="#00BDC3"
            />

</LinearLayout>
    </ScrollView>
</LinearLayout>